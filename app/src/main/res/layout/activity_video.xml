<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.prim_player_cc.view.DefaultPlayerCCView
        android:id="@+id/player_cc"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="load"
            android:text="添加load组件"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="removeLoad"
            android:text="移除load组件"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/colorPrimary"
            android:onClick="addControl"
            android:text="添加广告组件"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:onClick="removeControl"
        android:text="移除广告组件"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:onClick="addError"
        android:text="添加声音控制组件"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:onClick="removeError"
        android:text="移除声音控制组件"
        android:textColor="#ffffff"
        android:textSize="12sp" />
</LinearLayout>